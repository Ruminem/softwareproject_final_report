<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gray_base"
    android:padding="8dp">

=
    <LinearLayout
        android:background="#ffffff"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquare2"
            android:textSize="24sp"
            android:text="ID"/>
        <TextView
            android:id="@+id/idText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:fontFamily="@font/nanumsquare2"
            android:text="고객님의아이디"
            android:textSize="24sp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/changeLay"
        android:gravity="center"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/member_imfomation_change_image"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquare2"
            android:textSize="24sp"
            android:text="회원정보 변경"
            android:drawableRight="@drawable/baseline_chevron_right_black_18dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/logoutLay"
        android:background="@drawable/round_background"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/goob_by_image"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="로그아웃"
            android:fontFamily="@font/nanumsquare2"
            android:textSize="24sp"
            android:drawableRight="@drawable/baseline_chevron_right_black_18dp"/>
    </LinearLayout>

</LinearLayout>