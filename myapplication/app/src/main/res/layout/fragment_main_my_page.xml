<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gray_base">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/idText"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/nanumsquare"
                    android:textSize="25sp"
                    android:textColor="#949494"
                    android:text="아이디"
                    />
                <TextView
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/nanumsquare2"
                    android:textSize="25sp"
                    android:textColor="#0077bd"
                    android:text="+"
                    />
            </LinearLayout>

            <LinearLayout
                android:weightSum="1"
                android:layout_marginTop="1dp"
                android:background="@drawable/round_background"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="0.25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/mypage_point"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/point_image"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:textColor="#08446d"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumsquare2"
                        android:text="포인트"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="0.25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/mypage_wishlist"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/king_of_star"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:textColor="#08446d"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumsquare2"
                        android:text="찜목록"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="0.25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/mypage_bid_history"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/list_management"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:textColor="#08446d"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumsquare2"
                        android:text="입찰내역"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="0.25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/mypage_bid_management"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/list_setting"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:textColor="#08446d"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumsquare2"
                        android:text="입찰관리"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_marginTop="1dp"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/mypage_notice"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="25sp"
                    android:textColor="#949494"
                    android:text="공지사항"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/mypage_event"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="25sp"
                    android:textColor="#949494"
                    android:text="이벤트"/>
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/mypage_adversting"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="25sp"
                    android:textColor="#949494"
                    android:text="광고문의"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/mypage_cusomersafety"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="25sp"
                    android:textColor="#949494"
                    android:text="고객센터"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/one_to_one_inquiry"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="25sp"
                    android:textColor="#949494"
                    android:text="1:1 문의"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/mypage_preferences"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="25sp"
                    android:textColor="#949494"
                    android:text="환경설정"/>
            </LinearLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_background">
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                android:text="현재버전 1.0.0. (더이상개발안함)"/>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/round_background">
                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="24시간 연중 무휴 고객센터"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_marginBottom="5dp"
                    android:text="010-7766-8228"/>
            </LinearLayout>
        </LinearLayout>

</LinearLayout>